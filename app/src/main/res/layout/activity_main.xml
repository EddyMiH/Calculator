<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCustomDark"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/display_editText_main_activity"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="0"
        android:textAlignment="viewEnd"


        android:textColor="@color/colorCustomWhite"
        android:textColorHint="@color/colorCustomWhite"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_clear_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="C"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_editText_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_plusMinus_main_activity" />

    <Button
        android:id="@+id/btn_plusMinus_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="Â±"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="40dp"

        app:layout_constraintLeft_toRightOf = "@+id/btn_clear_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/display_editText_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_percent_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_percent_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="%"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="40dp"

        app:layout_constraintLeft_toRightOf = "@+id/btn_plusMinus_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/display_editText_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_divide_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_divide_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomTeal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="/"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="40dp"

        app:layout_constraintLeft_toRightOf = "@+id/btn_percent_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/display_editText_main_activity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp" />

    <Button
        android:id="@+id/btn_seven_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="7"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_eight_main_activity" />

    <Button
        android:id="@+id/btn_eight_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="8"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf = "@+id/btn_seven_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_plusMinus_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_nine_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_nine_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="9"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf = "@+id/btn_eight_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_percent_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_mult_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_mult_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomTeal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="*"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"

        app:layout_constraintLeft_toRightOf = "@+id/btn_nine_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_divide_main_activity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp" />

    <Button
        android:id="@+id/btn_four_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="4"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_seven_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_five_main_activity" />

    <Button
        android:id="@+id/btn_five_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="5"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf = "@+id/btn_four_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_eight_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_six_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_six_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="6"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf = "@+id/btn_five_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_nine_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_minus_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_minus_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomTeal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="-"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"

        app:layout_constraintLeft_toRightOf = "@+id/btn_six_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_mult_main_activity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp" />

    <Button
        android:id="@+id/btn_one_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="1"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_four_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_two_main_activity" />

    <Button
        android:id="@+id/btn_two_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="2"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf = "@+id/btn_one_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_five_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_three_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_three_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="3"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf = "@+id/btn_two_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_six_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_plus_main_activity"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp"/>

    <Button
        android:id="@+id/btn_plus_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomTeal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="+"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"

        app:layout_constraintLeft_toRightOf = "@+id/btn_three_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_minus_main_activity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginHorizontal="0.5dp" />

    <Button
        android:id="@+id/btn_zero_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="80dp"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_dot_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_one_main_activity"
        android:layout_marginHorizontal="0.5dp" />
    <Button
        android:id="@+id/btn_dot_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomWhite"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="."
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_zero_main_activity"
        app:layout_constraintRight_toLeftOf="@+id/btn_equal_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_three_main_activity"
        android:layout_marginHorizontal="0.5dp"  />
    <Button
        android:id="@+id/btn_equal_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomTeal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp"
        android:text="="
        android:textSize="30dp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_dot_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus_main_activity"
        android:layout_marginHorizontal="0.5dp"  />


</android.support.constraint.ConstraintLayout>